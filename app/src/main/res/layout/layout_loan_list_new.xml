<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/new_card"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_152sdp"
            android:background="@drawable/loan_back">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCardType"
                style="@style/FontMediumBlack12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Cards"
                android:textColor="@color/grey_naturals"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivLogoBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_1sdp"
                    android:scaleType="fitEnd"
                    tools:srcCompat="@drawable/ic_back_imge_demo" />


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_background"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginHorizontal="@dimen/_17sdp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="26dp"
                    android:elevation="3dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"


                        android:elevation="3dp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llCardBackGround"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_12sdp"
                            android:paddingEnd="@dimen/_12sdp">

                            <LinearLayout
                                android:id="@+id/ivMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvBankName"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/basiercircle_medium"
                                    android:gravity="center|start"
                                    android:text="HDFC Regalia"
                                    android:textColor="@color/colorTextBlack"
                                    android:textSize="@dimen/_10sdp"
                                    tools:ignore="HardcodedText" />


                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/iv_bank_image"
                                    android:layout_width="@dimen/_80sdp"
                                    android:layout_height="@dimen/_24sdp"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_2sdp"
                                    android:scaleType="fitEnd"
                                    android:src="@drawable/bank_icon" />


                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_8sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:scaleType="fitEnd"
                                    android:textColor="@color/colorTextGrey"
                                    android:visibility="gone"
                                    app:srcCompat="@drawable/ic_vertical_menu" />

                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvCardNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:fontFamily="@font/basiercircle_medium"
                                android:textColor="@color/colorTextGreyNew"
                                android:textSize="@dimen/_9sdp"
                                tools:text="··· 3425" />

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llDueDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="@dimen/_22sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_bill_due" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvBillPaidDate"
                        style="@style/Font500"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_7sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/basiercircle_medium"
                        android:text="You maid minimum bill on XX-YY"
                        android:textSize="@dimen/_9sdp" />
                </androidx.appcompat.widget.LinearLayoutCompat>


                <LinearLayout
                    android:id="@+id/llCaseThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/loan_bg_bottom_curve"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="0.8dp"

                    android:paddingVertical="@dimen/_8sdp">

                    <RelativeLayout
                        android:id="@+id/rl_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/llPayNow"
                            android:layout_width="@dimen/_180sdp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_29sdp"
                                android:layout_height="@dimen/_29sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:src="@drawable/ic_pay_now"
                                android:visibility="gone" />

                            <TextView
                                style="@style/FontBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:maxLines="2"
                                android:text="Bill information not found"
                                android:textColor="@color/colornaturals"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llFullyPaid"
                            android:layout_width="@dimen/_180sdp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:src="@drawable/ic_paid_thumb"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvLastBillAmt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="@dimen/_8sdp"
                                    android:fontFamily="@font/basiercircle_medium"
                                    android:maxLines="2"
                                    android:text="Your last bill ₹ 10,000 "
                                    android:textColor="@color/colornaturals"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/fullyPaidText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_8sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:fontFamily="@font/basiercircle_medium"
                                    android:maxLines="2"
                                    android:paddingVertical="@dimen/_2sdp"
                                    android:text="Fully Paid"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_9sdp" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llBillDue"
                            android:layout_width="@dimen/_180sdp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"

                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvDueAmount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:fontFamily="@font/basiercircle_semibold"
                                            android:textColor="@color/colorTextTitleBlack"
                                            android:textSize="@dimen/_17sdp"
                                            tools:text="₹10,500" />


                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvDueDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/basiercircle_medium"
                                        android:textColor="@color/colorTextRed"
                                        android:textSize="@dimen/_9sdp"
                                        tools:text="Due in 3 Days" />

                                </androidx.appcompat.widget.LinearLayoutCompat>

                            </androidx.appcompat.widget.LinearLayoutCompat>


                        </LinearLayout>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/btn_checkBill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="bottom"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:background="@drawable/ic_pay_now_btn"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/basiercircle_medium"
                                android:text="CHECK BILL"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/btn_common"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="bottom"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:background="@drawable/ic_pay_now_btn"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/basiercircle_medium"
                                android:text="PAY NOW"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"

                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_8sdp"
                                    android:layout_height="@dimen/_8sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="@dimen/_4sdp"
                                    app:srcCompat="@drawable/cheq_reward_coin" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/basiercircle_regular"
                                    android:text="Earn 1%"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_8sdp" />

                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/flSolidColor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    tools:background="@drawable/loan_bottom_shap"
                    android:layout_alignParentBottom="true"

                    android:backgroundTint="@color/black"
                    android:layout_gravity="bottom"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4sdp"
                    android:background="@color/white"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginBottom="-8dp"
                    android:layout_above="@+id/flSolidColor"/>


            </RelativeLayout>
        </FrameLayout>

    </FrameLayout>


</layout>