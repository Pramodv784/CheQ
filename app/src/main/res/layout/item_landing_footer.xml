<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="45dp"
    android:paddingBottom="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/landing_footer_title"
            android:textColor="@color/colorTextTitle"
            android:textSize="16sp"
            app:fontFamily="@font/basiercircle_medium" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/landing_footer_subtitle"
            android:textColor="@color/ref_grey_light"
            android:textSize="12sp"
            app:fontFamily="@font/basiercircle_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                style="@style/LandingFooterLogoStyle"
                android:src="@drawable/ic_hdfc_logo" />

            <Space
                android:layout_width="14dp"
                android:layout_height="0dp" />

            <ImageView
                style="@style/LandingFooterLogoStyle"
                android:src="@drawable/axis" />

            <Space
                android:layout_width="14dp"
                android:layout_height="0dp" />


            <ImageView
                style="@style/LandingFooterLogoStyle"
                android:src="@drawable/sbi2" />

            <Space
                android:layout_width="14dp"
                android:layout_height="0dp" />


            <ImageView
                style="@style/LandingFooterLogoStyle"
                android:src="@drawable/ic_icici_logo" />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/exploreBtn"
            style="@style/GlobalButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/basiercircle_medium"
            android:text="@string/explore_cheq"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

</FrameLayout>