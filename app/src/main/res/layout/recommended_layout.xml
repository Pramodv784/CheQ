<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_20sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acion Recommended"
        android:textAllCaps="true"
        android:textSize="@dimen/_10sdp"
        android:textColor="#6E7170"
        android:textFontWeight="600"
        android:id="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/_150sdp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/_15sdp"
        android:id="@+id/ll_cheq_safe"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_cheq_safe_rect"
        >

        <TextView
            android:layout_width="@dimen/_190sdp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Never Miss A Payment With CheQ Safe"
            android:fontFamily="@font/basiercircle_medium"
            android:textColor="@color/black"
            android:textFontWeight="700"
            android:id="@+id/tv_1"
            android:textSize="@dimen/_12sdp"/>

        <TextView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_1"
            android:text="Pay your bills on time and earn 1%"
            android:fontFamily="@font/basiercircle_medium"
            android:textColor="#131414"
            android:layout_marginTop="@dimen/_10sdp"
            android:textFontWeight="500"
            android:id="@+id/tv_2"
            android:textSize="@dimen/_10sdp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="link email"
            android:textColor="@color/white"
            android:background="@drawable/button_color_primary_small"
            android:textAllCaps="true"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acion Recommended"
        android:textAllCaps="true"
        android:textSize="@dimen/_10sdp"
        android:textColor="#6E7170"
        android:textFontWeight="600"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/title_2"
        app:layout_constraintTop_toBottomOf="@+id/ll_cheq_safe"
        app:layout_constraintStart_toStartOf="parent"

        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/_150sdp"
        app:layout_constraintTop_toBottomOf="@+id/title_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/_15sdp"
        android:id="@+id/ll_refere"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_cheq_safe_rect"
        >

        <TextView
            android:layout_width="@dimen/_190sdp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Never Miss A Payment With CheQ Safe"
            android:fontFamily="@font/basiercircle_medium"
            android:textColor="@color/black"
            android:textFontWeight="700"
            android:id="@+id/tv_3"
            android:textSize="@dimen/_12sdp"/>

        <TextView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_3"
            android:text="Pay your bills on time and earn 1%"
            android:fontFamily="@font/basiercircle_medium"
            android:textColor="#131414"
            android:layout_marginTop="@dimen/_10sdp"
            android:textFontWeight="500"
            android:id="@+id/tv_4"
            android:textSize="@dimen/_10sdp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="link email"
            android:textColor="@color/white"
            android:background="@drawable/button_color_primary_small"
            android:textAllCaps="true"/>





    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>