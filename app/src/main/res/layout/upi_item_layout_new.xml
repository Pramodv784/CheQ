<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
       >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llUpi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <LinearLayout
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:gravity="center"

               >

                <ImageView
                    android:id="@+id/iv_bank_logo"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center_vertical"

                    android:src="@drawable/ic_upi_logo" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvUPIName"
                style="@style/FontExtraBoldBlack14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/basiercircle_medium"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textSize="@dimen/_11sdp"
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:text="SBI Banking"
                android:textColor="@color/colornaturals" />

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_arrow_" />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            app:layout_constraintTop_toBottomOf="@+id/llUpi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#E6EAE9"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>