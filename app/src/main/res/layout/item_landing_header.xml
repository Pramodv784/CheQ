<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/demo7"
            app:layout_constraintBottom_toBottomOf="@id/titleTV2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/basiercircle_semibold"
            android:gravity="center"
            android:text="@string/landing_welcome"
            android:textColor="@color/colorTextTitle"
            android:textSize="@dimen/_13sdp"
            app:drawableStartCompat="@drawable/ic_cheq_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/userNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/basiercircle_medium"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_2sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleTV"
            tools:text="Jitendra" />

        <View
            android:id="@+id/dividerView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/grey_light"
            app:layout_constraintTop_toBottomOf="@id/userNameTV" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:fontFamily="@font/basiercircle_medium"
            android:padding="10dp"
            android:text="@string/make_credit_card_bill"
            android:textColor="@color/colorTextTitle"
            android:textSize="@dimen/_11sdp"
            app:drawableStartCompat="@drawable/ic_chips"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>