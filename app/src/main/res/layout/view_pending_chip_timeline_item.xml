<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/topLineView"
        android:layout_width="2dp"
        android:layout_height="0dp"

        android:layout_marginStart="10dp"
        android:background="@color/default_box_bg"
        app:layout_constraintHeight_min="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/llCount"
    android:paddingHorizontal="@dimen/_4sdp"
    android:background="@drawable/pending_chip_outline_background"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/topLineView"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_7sdp"

        android:layout_height="@dimen/_7sdp"
        android:layout_gravity="center_vertical"

        app:srcCompat="@drawable/cheq_reward_coin" />
    <TextView

        android:id="@+id/countTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:paddingHorizontal="@dimen/_2sdp"
        android:gravity="center"
        android:paddingVertical="3dp"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:fontFamily="@font/basiercircle_medium"

        tools:ignore="SmallSp"
        tools:text="200" />
</LinearLayout>


    <TextView
        android:id="@+id/textTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:fontFamily="@font/basiercircle_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/llCount"
        app:layout_constraintTop_toTopOf="@id/llCount"
        tools:text="Hello World" />


    <ImageView
        android:id="@+id/bottomLineView"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:background="@color/default_box_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_min="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llCount" />


</androidx.constraintlayout.widget.ConstraintLayout>