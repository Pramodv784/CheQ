<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomsheet_google_signin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/CustomizedBottomDialogStyle">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdp"
        android:elevation="15dp"
        android:layout_margin="@dimen/_17sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_margin="@dimen/_17sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_gravity="end"
        android:gravity="end"
        android:layout_marginVertical="@dimen/_17sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/close" />

        <ImageView
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_128sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_17sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ach_info" />



        <TextView
            style="@style/FontExtraBoldDarkBlue24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/ach_e_mandate_registration"
            android:textColorHint="@color/colorAccent" />


            <LinearLayout
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/_38sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:src="@drawable/ic_icon_rupees" />


                <TextView
                    android:layout_marginStart="@dimen/_7sdp"
                    style="@style/FontLightBlack14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:maxLines="6"
                    android:text="@string/authentication_for_e_mandate_requires_an_active_net_banking_log_in_some_banks_do_provide_it_through_your_debit_card_too" />

            </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_18sdp"
            android:background="@color/color_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                android:src="@drawable/ic_icon_graph" />


            <TextView
                android:layout_marginStart="@dimen/_7sdp"
                style="@style/FontLightBlack14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top"
                android:maxLines="3"
                android:text="@string/the_maximum_amount_for_an_e_mandate_is_rs_10_lac_for_an_amount_above_rs_10_lac_you_will_have_to_issue_a_paper_mandate" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_18sdp"
            android:background="@color/color_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                android:src="@drawable/ic_icon__calendar" />


            <TextView
                android:layout_marginStart="@dimen/_7sdp"
                style="@style/FontLightBlack14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top"
                android:maxLines="3"
                android:text="@string/ach_registration_process_may_take_a_maximum_of_24_hours" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_18sdp"
            android:background="@color/color_view"/>

        <Button
            android:id="@+id/button"
            android:layout_marginBottom="@dimen/_15sdp"
            style="@style/GlobalButtonStyle"
            android:backgroundTint="@color/grey"
            android:text="@string/next" />



    </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>