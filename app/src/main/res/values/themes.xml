<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CheQ" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:ambientShadowAlpha">0.5</item>
        <item name="android:spotShadowAlpha">0.5</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/customActivityAnimation</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="chipStyle">@style/CheqChipTheme</item>
    </style>


    <style name="Widget.Freshchat.ChannelName">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/freshchat_channel_name_max_lines</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textDirection">firstStrong</item>
        <item name="android:textAlignment">viewStart</item>
    </style>


    <style name="freshchatChannelNameTextStyle" parent="Widget.Freshchat.TeamMemberAvatarView">
        <item name="freshchatTeamMemberAvatarIcon">@drawable/drawable_cetegory</item>
        <item name="android:title">Chat</item>
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.Freshchat.ChannelList">
        <item name="android:background">@null</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_bottomsheet</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Animation.Activity">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="customActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="CustomizedBottomDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/_360sdp</item>
        <item name="android:maxHeight">@dimen/_360sdp</item>
        <item name="android:background">@drawable/round_bottom_sheet</item>
    </style>

    <style name="BottomSheetDialog2" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper2</item>
    </style>

    <style name="bottomSheetStyleWrapper2" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/_370sdp</item>
        <item name="android:maxHeight">@dimen/_370sdp</item>
        <item name="android:background">@drawable/round_bottomsheet</item>
    </style>


    <style name="BottomSheetDialogNew" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="GlobalButtonStyle" parent="Font700">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="textAllCaps">true</item>
        <item name="font">@style/FontMediumBlack16</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/multi_button_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GlobalButtonStyleSmall" parent="Font700">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="textAllCaps">false</item>
        <item name="font">@style/FontMediumBlack16</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_small_btn</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GlobalButtonStyleNew" parent="Font700">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="textAllCaps">false</item>
        <item name="font">@style/FontMediumBlack16</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:background">@drawable/button_color_primary_outlined</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="GlobalButtonStyleTransparent" parent="Font700">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="textAllCaps">false</item>
        <item name="font">@style/FontMediumBlack16</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:background">@drawable/button_color_primary_transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SettingButtonStyle">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/basiercircle_medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Chips" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">@dimen/_26sdp</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textStyle">normal</item>




        <item name="android:textAppearance">@style/ChipSmallTextAppearance</item>
    </style>

    <style name="ChipSmallTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/basiercircle_medium</item>
    </style>

    <style name="GlobalButtonStyleWhite" parent="Font700">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_white_bordered</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="chipIcon">@drawable/chip_bg</item>
    </style>


    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_bottom_sheet</item>
    </style>

    <style name="Switch_Style" parent="Theme.CheQ">

    </style>

    <style name="Theme.CheQ.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CheQ.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CheQ.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullScreenDialogStyle" parent="@style/Base.Theme.AppCompat.Light.Dialog">

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">true</item>

        <item name="android:windowIsFloating">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Additionally if you want animations when dialog opening -->
        <!--<item name="android:windowEnterAnimation">@anim/slide_up</item>-->
        <!--<item name="android:windowExitAnimation">@anim/slide_down</item>-->
    </style>

    <style name="OnboardingProgressBarStyle">
        <item name="android:indeterminate">false</item>
        <item name="android:progress">0</item>
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="indicatorColor">@color/colorPrimary</item>
        <item name="trackColor">@color/colorBubbleGumGreenGradient</item>
        <item name="trackCornerRadius">5dp</item>

    </style>

    <style name="LandingFooterLogoStyle">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/landing_logo_background</item>
    </style>

    <style name="RemoveAppSplashTheme" parent="@style/Theme.CheQ">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="CheqChipTheme" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipCornerRadius">26sp</item>
        <item name="android:padding">8sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/basiercircle_medium</item>
    </style>

    <style name="ProximaInputFieldStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/proxima_input_field_background</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:fontFamily">@font/basiercircle_regular</item>
        <item name="android:textColor">@color/color_grey_9</item>
        <item name="android:textColorHint">@color/color_grey_5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">16sp</item>

    </style>

    <style name="ProximaPrimaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/basiercircle_semibold</item>
        <item name="android:background">@drawable/proxima_primary_button_background</item>
        <item name="android:textColor">@color/proxima_primary_button_text_color</item>
    </style>

    <style name="ProximaSecondaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/basiercircle_semibold</item>
        <item name="android:background">@drawable/proxima_secondary_button_background</item>
        <item name="android:textColor">@color/proxima_secondary_button_text_color</item>
    </style>

</resources>