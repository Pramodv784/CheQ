<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:elevation="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_margin="@dimen/_17sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/close" />

            <ImageView
                android:layout_width="@dimen/_195sdp"
                android:layout_height="@dimen/_195sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_17sdp"
                android:scaleType="centerCrop" />

            <TextView
                style="@style/FontExtraBoldDarkBlue24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/registration_successful"
                android:textColorHint="@color/colorAccent" />

            <TextView
                android:layout_marginBottom="@dimen/_20sdp"
                style="@style/FontMediumDarkBlue18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:maxLines="2"
                android:hint="@string/your_payment_was_successful_you_can_now_continue_using_cheq"
                android:textColorHint="@color/colorAccent" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>